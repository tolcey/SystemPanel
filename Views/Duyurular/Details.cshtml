@model SystemPanel.Models.Duyuru

<div class="container mt-4">
    <h2 class="mb-3">Duyuru Detayları</h2>

    <!-- Genel Bilgiler -->
    <div class="card mb-4">
        <div class="card-header">
            <strong>Duyuru Türü:</strong> @Model.Turu
        </div>
        <div class="card-body">
            <p><strong>İlgili Birim:</strong> @Model.Birimi</p>
            <p><strong>Kayıt Tarihi:</strong> @Model.KayitTarihi?.ToString("dd MMMM yyyy")</p>
            <p><strong>Detaylar:</strong> @Model.Detay</p>
        </div>
    </div>

    <div class="mt-4">
        <a asp-action="List" class="btn btn-secondary">Listeye Dön</a>
    </div>
</div>
