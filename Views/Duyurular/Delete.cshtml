@model SystemPanel.Models.Duyuru

<h2>Duyuru Sil</h2>
<p>Bu duyuruyu silmek istediğinize emin misiniz?</p>
<p><strong>Tür:</strong> @Model.Turu</p>
<p><strong>Detay:</strong> @Model.Detay</p>

<form asp-action="ConfirmDelete" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">Sil</button>
    <a asp-action="List" class="btn btn-secondary">İptal</a>
</form>
