@model IEnumerable<SystemPanel.Models.LogEntry>

<h2>Loglar</h2>
<form method="get" action="/Log/Index">
    <input type="text" name="filter" placeholder="Filtrele" />
    <button type="submit" class="btn btn-primary">Ara</button>

</form>
<table class="table table-striped mt-3">
    <thead>
        <tr>
            <th>Tarih</th>
            <th>Seviye</th>
            <th>Mesaj</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var log in Model)
        {
            <tr>
                <td>@log.Timestamp</td>
                <td>@log.Level</td>
                <td>@log.Message</td>
                <td>
                    <a href="/Log/Details/@log.Id" class="btn btn-info">Detaylar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
