@model SystemPanel.Models.SccmLog

@{
    ViewData["Title"] = "Edit Log";
}

<h1>Edit Log</h1>

<form asp-action="Edit">
    <input type="hidden" name="Id" value="@Model.Id" />
    <div class="form-group">
        <label for="Ip">IP Address</label>
        <input type="text" class="form-control" id="Ip" name="Ip" value="@Model.Ip" required>
    </div>
    <div class="form-group">
        <label for="Date">Date</label>
        <input type="datetime-local" class="form-control" id="Date" name="Date" value="@Model.Tarih?.ToString("yyyy-MM-ddTHH:mm") ?? " " " required>
    </div>
    <div class="form-group">
        <label for="ScLog">Log Details</label>
        <textarea class="form-control" id="ScLog" name="ScLog">@Model.ScLog</textarea>
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
