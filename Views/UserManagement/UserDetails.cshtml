@model SystemPanel.ViewModels.User.UserDetailViewModel

@{
    ViewData["Title"] = "Kullanıcı Detayları";
}

<h1>@ViewData["Title"]</h1>

<div class="card">
    <div class="card-header">
        <h3>@Model.UserName</h3>
    </div>
    <div class="card-body">
        <p><strong>E-posta:</strong> @Model.Email</p>
        <p>
            <strong>Durum:</strong>
            @if (Model.IsActive)
            {
                <span class="badge bg-success">Aktif</span>
            }
            else
            {
                <span class="badge bg-secondary">Pasif</span>
            }
        </p>
        <p class="text-muted">Oluşturulma Tarihi: @Model.CreatedDate.ToString("dd.MM.yyyy HH:mm")</p>
    </div>
    <div class="card-footer text-end">
        <a href="/users/edit/@Model.Id" class="btn btn-warning">Düzenle</a>
        <a href="/users/delete/@Model.Id" class="btn btn-danger">Sil</a>
    </div>
</div>

<a href="/users" class="btn btn-secondary mt-3">Tüm Kullanıcılara Geri Dön</a>
